<Window x:Class="Bongruel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bongruel"
        mc:Ignorable="d"
        Title="본죽">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Height="50" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBox x:Name="tbInput" AcceptsReturn="True" Width="200"></TextBox>
            <Button x:Name="btnSend" Content="보내기" Click="BtnSend_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
