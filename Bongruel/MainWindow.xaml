<Window x:Class="Bongruel.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bongruel"
        mc:Ignorable="d"
        Title="본죽">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <!--
        <StackPanel Height="50" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBox x:Name="tbInput" AcceptsReturn="True" Width="200"></TextBox>
            <Button x:Name="btnSend" Content="보내기" Click="BtnSend_Click"></Button>
        </StackPanel>
        -->
        
        <ContentControl x:Name="contentControl" Grid.ColumnSpan="2"/>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" x:Name="buttonGrid">
            <!--임시 컨트롤 전환 버튼-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button Width="100" Height="70" Content="MenuWindow로" x:Name="goMenuWindowBtn" Click="GoMenuWindowBtn_Click"/>
                <Button Width="100" Height="70" Content="BNetwork로" x:Name="goBNetwork" Click="GoBNetwork_Click" Margin="10,0,10,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
