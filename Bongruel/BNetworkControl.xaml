<UserControl x:Class="Bongruel.BNetworkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bongruel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Height="50" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBox x:Name="tbInput" AcceptsReturn="True" Width="200"></TextBox>
            <Button x:Name="btnSend" Content="보내기" Click="BtnSend_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
